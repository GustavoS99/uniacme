<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="candidate_category" model="res.partner.category">
        <field name="name">Candidato</field>
    </record>

    <record id="view_candidate_form" model="ir.ui.view">
        <field name="name">candidate.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="uniacme.view_student_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button string="Guardar" type="object" name="action_create_candidate" class="btn btn-outline-primary"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='is_student']" position="after">
                <field name="is_candidate"/>
            </xpath>
        </field>
    </record>
</odoo>